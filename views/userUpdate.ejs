<!DOCTYPE html>
<html lang="en">
    <head>
        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
            <script src="https://kit.fontawesome.com/8f6de878db.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
            <style>
              .card{
                  background-color: rgb(235, 66, 94);
                }
              
                a h5{
                  color: white;
                }
              
                .badge {
                position: absolute;
                top: 0;
                right: 0;
              }
          
              .card{
                width: 131px;
                height: 163px;
              }
          
              #id1{
                color: gray;
                text-decoration: none;
              }
                
              </style>
        <title>Faculty Update Page</title>
    </head>
    
    <body>
        <div class="row">
            <div class="col-sm">
              <nav class="navbar navbar-default" style="background-color: pink;">
                <div class="container-fluid">
                  <div class="navbar-header">
                    <a class="navbar-brand weight-300" href="">
                      <img src="https://cms.cb.amrita.edu/images/amrita_wide_short_new.png" style="margin-top: -40px; margin-left: 40px;">
                  </a>
                  </div>
                  <ul class="nav navbar-nav navbar-right">
                    <li><a href="/admin/user" id="id1"><i class="fas fa-arrow-left"></i>   Back to Update User</a></li>
                  </ul>
                </div>
              </nav>
            </div>
          </div>
        <div class="container">
            <form action="/admin/user/edit/<%= user._id %>" method="POST">
                <div style="background:rgb(234,235,185) !important " class="jumbotron text-center">
                    <h3>USERNAME : <%= user.username %></h3>
                    <h3>NAME : <%= user.name %></h3>
                  </div>
                <h4>List of Courses : </h4>
                <div class="form-check">
                    <% courses.forEach(function(course){ %>
                        <% if(user.courseList.includes(course._id)){ %>
                            <div>
                            <input class="form-check-input" type="checkbox"  id="flexCheckDefault" value="<%= course._id %>" name="newcourseList" checked>
                            <label class="form-check-label" for="flexCheckDefault"><%= course.courseName %></label>
                            </div>
                        <% } else{ %>
                            <div>
                            <input class="form-check-input" type="checkbox"  id="flexCheckDefault" value="<%= course._id %>" name="newcourseList">
                            <label class="form-check-label" for="flexCheckDefault"><%= course.courseName %></label>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
                <br>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </body>
</html>